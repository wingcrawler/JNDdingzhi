        <view class="tips" @tap="changeLawsHeight" data-id="{{item.index}}"  wx:if="{{ item.laws_folded }}">全文</view>
        <view class="tips" @tap="changeLawsHeight" data-id="{{item.index}}" wx:if="{{ item.get_all }}">收起</view>
