        <view class="tips" @tap="getJudicialHeight" data-id="{{item.index}}" wx:if="{{ item.judicial_folded }}">全文</view>
        <view class="tips" @tap="getJudicialHeight" data-id="{{item.index}}" wx:if="{{ item.get_all }}">收起</view>
