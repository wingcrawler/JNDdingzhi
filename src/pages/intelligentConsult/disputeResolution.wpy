</template>

<script>
import wepy from 'wepy'
import {ROBOT_URL, Platform} from '@/utils/constants'
import Loading from '@/components/loading'

export default class disputeResolution extends wepy.page {
  config = {
    navigationBarTitleText: '解纷方式'
  };
  data={
    dsType: 'primary',
    disputeResolutionStage: ' ',
    swiperHeight: '',
    suggest: {},
    currentItem: 0,
    showModalStatus: false,
    maskData: {},
    loading: false,
  };
  components = {
    loading: Loading
  }

  watch={
    suggest() {
      var dom = '.suggest' + this.currentItem
      this.$nextTick(() => {
        wx.createSelectorQuery().select(dom).boundingClientRect(({height}) => {
          console.log(height)
          this.swiperHeight = height
          this.$apply()
        }).exec()
      })
      // }
    },

    currentItem() {
      var dom = '.suggest' + this.currentItem
      console.log(dom)
      this.$nextTick(() => {
        wx.createSelectorQuery().select(dom).boundingClientRect(({height}) => {
          console.log(height)
          this.swiperHeight = height
          this.$apply()
        }).exec()
      })
      // }
    },

  };
  onShareAppMessage(res) {
    if (res.from === 'button') {
      // 来自页面内转发按钮
      console.log(res.target)
    }
    return {
      title: '石景山在线矛盾纠纷多元化解平台',
      imageUrl: '/images/home/icon.jpg',
      path: '/pages/home/home'
    }
  }
  methods={
    swichItem(index) {
      console.log('tap')
      console.log(index)
      this.currentItem = index
    },

    hideModal () {
      this.showModalStatus = false
      this.$apply()
    },

    // 遮罩层
    showMask(item) {
      console.log(item)
      var context = JSON.parse(item.context), data = {}
      console.log(context)
      data.title = item.title
      data.href = context[0].href
      data.subcontext = this.convertHtmlToText(context[0].subcontext)
      console.log(context[0].subcontext)
      console.log(data.subcontext)
      data.subtitle = context[0].subtitle
      this.maskData = data
      this.showModalStatus = true
      this.$apply()
    },

    // 下载文件
    downloadFile(url) {
      wx.showLoading()
//        var encodeUrl=url.split('/')[2]
      var arr = url.split('/')
      arr[arr.length - 1] = encodeURIComponent(arr[arr.length - 1])
      var encodeUrl = arr.join('/')
      console.log(encodeUrl)
//        encodeUrl=encodeURIComponent(encodeUrl)
      wx.downloadFile({
        url: ROBOT_URL + encodeUrl,
        header: {'Content-Type': 'application/json'},
        success: function (res) {
          // 文件保存到本地
          var tempFilePaths = res.tempFilePath
          wx.hideLoading()
          wx.saveFile({
            tempFilePath: tempFilePaths,
            success: function (ret) {
              var savedFilePath = ret.savedFilePath
              wx.openDocument({
                filePath: savedFilePath,
                success: function (res) {
                  console.log('open success')
                },
                fail: function (res) {
                  console.log('open fail')
                  wx.showToast({
                    title: '打开失败，请重试！',
                    icon: 'none',
                    duration: 2000
                  })
                }
              })
            },
            complete: function() {

            }
          })
        },
        fail: function (res) {
          wx.hideLoading()
          wx.showToast({
            title: '下载失败，请重试！',
            icon: 'none',
            duration: 2000
          })
        }

      })
    }
  };

  // 初始化数据
  initData(data, dsType) {
    var that = this
    console.log(data)
    return new Promise((resolve, reject) => {
      wx.request({
        url: ROBOT_URL + 'relate/solution',
        method: 'POST',
        data: data,
        header: {'Content-Type': 'application/json', 'dsType': that.dsType, platform: Platform, device: 'WeChatApplet'},
        success: function(res) {
          console.log(res)
          var arr = res.data.result
          for (var i = 0; i < arr.length; i++) {
            if (arr[i].isActive) {
              that.currentItem = i
            }
          }
          resolve(res.data)
        }
      })
    })
  }

  // 富文本转换为纯文本
  convertHtmlToText(inputText) {
    var returnText = '' + inputText
    // -- remove BR tags and replace them with line break
    returnText = returnText.replace(/<br\s*?>/gi, '\r\n')

    return returnText
  }

  // 滑动
  itemChange(e) {
    console.log(e)
    this.currentItem = e.detail.current
    console.log(this.currentItem)
  }

  onLoad(data) {
    console.log(data)
    if (data.dsType !== ' ') {
      this.dsType = data.dsType
      this.$apply()
    }

    if (data.disputeResolutionStage) {
      this.disputeResolutionStage = data.disputeResolutionStage
    }
  }

  onReady() {
    var that = this
    this.initData(this.disputeResolutionStage, this.dsType).then(function(data) {
      that.suggest = data
      that.$apply()
    })
  }
}

</script>

