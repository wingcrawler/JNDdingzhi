		</repeat>
	</view>
	<swiper class="swiper" style="height:{{swiperHeight}}px" bindchange="itemChange()" current="{{currentItem}}">
	<repeat for="{{suggest.result}}" key="index" index="index" item="item">
		<swiper-item >
